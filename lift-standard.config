;;; Configuration for LIFT tests

;; Settings
(:print-length 10)
(:print-level 5)
(:print-test-case-names t)

;; Suites to run
(hooks.test:root)

;; Report properties
(:report-property :title "cl-hooks | Test Results")
(:report-property :relative-to cl-hooks-test)

(:report-property :name        "test-results/test-report")
(:report-property :format      :html)
(:report-property :if-exists   :supersede)
(:report-property :style-sheet "test-style.css")
(:build-report)

(:report-property :name      "doc/test-results.xml")
(:report-property :format    :junit)
(:report-property :if-exists :supersede)
(:build-report)

(:report-property :format        :describe)
(:report-property :full-pathname *standard-output*)
(:build-report)
